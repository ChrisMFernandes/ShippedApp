<%= form_for @boats do |f| %>

<div class="container">
  <div class="text-center">
<h1>Add a new Boat</h1>
<p>Name	<%= f.text_field :name %></p>

<p>Container	<%= f.text_field :containers %></p>

<p>Location	<%= f.text_field :location %></p>


<%= submit_tag "Add"%>
</div>
</div>
<% end %>

<div class="page-header"><h1>Upload Photo</h1></div>

<%= form_for @boats do |f| %>
  <%= render 'shared/errors', object: @boat %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control'%>
  </div>

  <%= f.submit 'Upload', class: 'btn btn-primary' %>
<% end %>
